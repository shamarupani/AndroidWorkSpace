<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">


        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:src="@drawable/call"
            android:layout_marginLeft="300dp"

            />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Call Us"
            android:textSize="30sp"
            android:layout_marginLeft="300dp"
            android:layout_below="@+id/img1"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt1"
            android:gravity="center"
            android:src="@drawable/tshirt"
            />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T-Shirts"
            android:gravity="center"
            android:layout_below="@+id/img2"
            android:textSize="35sp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt2"
            android:gravity="center"
            android:src="@drawable/shirt"
            />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shirts"
            android:gravity="center"
            android:layout_below="@+id/img3"
            android:textSize="35sp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt3"
            android:gravity="center"
            android:src="@drawable/dress"
            />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dress"
            android:gravity="center"
            android:layout_below="@+id/img4"
            android:textSize="35sp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/img5"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt4"
            android:gravity="center"
            android:src="@drawable/watches"
            />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watches"
            android:gravity="center"
            android:layout_below="@+id/img5"
            android:textSize="35sp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/img6"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt5"
            android:gravity="center"
            android:src="@drawable/footwear"
            />
        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Footwear"
            android:gravity="center"
            android:layout_below="@+id/img6"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>
</ScrollView>